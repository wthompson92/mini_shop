<h1>Merchant Page</h1>
<h2><%= @merchant.name %></h2>
<ul>
<li><%="Address: #{@merchant.address}"%></li>
<li><%="City: #{@merchant.city}"%></li>
<li><%="State: #{@merchant.state}"%></li>
<li><%="Address: #{@merchant.zip}"%></li>
</ul>


<%= button_to "View #{@merchant.name}'s Items", merchant_items_path(@merchant.id), method: :get%>
<%= button_to 'Edit', edit_merchant_path(@merchant), method: :get%>
<%= button_to 'Back', merchants_path, method: :get %>
<%= button_to 'Delete', merchant_path(@merchant), method: :delete %>
