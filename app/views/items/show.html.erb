<h1><%= @item.name %></h1>
<ul>
<li><%= "Description: #{@item.description}" %></li>
<li><%= "Price: #{@item.price}" %></li>
<li><%= "Inventory: #{@item.inventory}" %></li>
<li><%= "Status: #{@item.status}" %></li>
<li><%= image_tag (@item.image) %></li>
</ul>


<%= button_to "Seller: #{@merchant.name}", "/merchants/#{@item.merchant_id}", method: :get %>
<%= button_to 'Edit', "/items/#{@item.id}/edit", method: :get%>

<%= button_to 'Delete', "/items/#{@item.id}", method: :delete%>
